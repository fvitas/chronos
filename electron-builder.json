{
  "appId": "com.electron.chronos",
  "copyright": "Copyright Â© 2018 Filip Vitas",
  "asar": true,
  "compression": "maximum",
  "files": [
    "build/",
    "static/",
    "app.js"
  ],
  "mac": {
    "artifactName": "${name}-mac-${arch}.${ext}",
    "target": ["dmg"],
    "icon": "static/icons/icon.icns",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": ["deb", "AppImage"],
    "executableName": "${name}-linux-${arch}.${ext}",
    "description": "",
    "synopsis": "",
    "maintainer": "Filip Vitas <filip.vitas.dev@gmail.com>",
    "category": "",
    "packageCategory": ""
  },
  "win": {
    "target": ["nsis", "portable"],
    "icon": "static/icons/icon.ico",
    "verifyUpdateCodeSignature": false
  },
  "dmg": {
    "contents": [
      {
        "x": 125,
        "y": 140
      },
      {
        "x": 355,
        "y": 140,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "background": "static/background-mac.png",
    "window": {
      "width": 512,
      "height": 320
    }
  },
  "nsis": {
    "artifactName": "${name}-windows-installer-${arch}.${ext}"
  },
  "portable": {
    "artifactName": "${name}-windows-portable-${arch}.${ext}"
  },
  "electronDownload": {
    "cache": ".electron-cache"
  },
  "directories": {
    "buildResources": "resources",
    "output": "release"
  }
}
