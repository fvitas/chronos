@import '../fonts/fonts.styl'

*
    box-sizing: border-box

body
    padding: 0
    margin: 0
    overflow: hidden
    font: 14px / 1.4 'Lato', sans-serif

main
    height: 100%
    background-color: #fff

.window-header
    width: 100%
    max-height: 100%
    border-radius: 4px 4px 0 0
    position: relative
    opacity: 1
    will-change: transform
    -webkit-app-region: drag

.window-header:before
    content: ""
    width: 100%
    height: 100%
    position: absolute
    background-color: #f9f9f9
    background-image: linear-gradient(-180deg,#f9f9f9,#f1f1f1)
    box-shadow: 0 1px 0 0 #ddd, inset 0 1px 0 0 #fff
    z-index: -1

.window-title
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height: 40px
    font-size: 16px
    cursor: default !important
    -webkit-user-select: none !important

.preferences
    height: calc(100vh - 40px)
    overflow: auto

.preference
    display: flex
    width: 100%
    height: 65px
    padding: 16px
    flex-wrap: wrap
    align-items: center

.preference-content
    display: flex
    flex: 1 0 50%
    flex-direction: column

.preference__description
    font-size: 12px
    color: #999

.checkbox
    transition: all 0.2s
    cursor: pointer
    user-select: none

    .toggle
        width: 56px
        padding: 3px
        border-radius: 30px
        background-color: #e6eaee
        transition: all 0.2s

    .ball
        height: 25px
        width: 25px
        margin-left: 0
        border-radius: 25px
        box-shadow: 0 3px 6px 0 rgba(0,35,11,0.2)
        background-color: #fff
        transition: all 0.3s ease-out

    &.active .toggle
        background-color: #5cca5c
    &.active .ball
        margin-left: 25px

.btn
    min-width: 70px
    padding: 8px
    border-radius: 3px
    border: none
    outline: none
    box-shadow:
        0 2px 2px 0 rgba(0,0,0,0.14),
        0 3px 1px -2px rgba(0,0,0,0.12),
        0 1px 5px 0 rgba(0,0,0,0.2)
    cursor: pointer
    text-align: center
    text-transform: uppercase
    user-select: none
    color: white

    &:active
        transform: scale(0.95)

.btn__info
    background: #4285f4

.btn__error
    background: #E57373

